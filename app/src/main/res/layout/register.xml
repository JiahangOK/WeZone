<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="372dp"
        android:layout_height="160dp"
        app:srcCompat="@mipmap/touxiang" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:drawableLeft="@mipmap/shouji"
        android:drawableBottom="@drawable/shape_et_bottom_line"
        android:drawablePadding="10dp"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:padding="10dp" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:drawableLeft="@mipmap/mima"
        android:drawableBottom="@drawable/shape_et_bottom_line"
        android:drawablePadding="10dp"
        android:hint="请输入密码"
        android:inputType="number"
        android:maxLength="11"
        android:padding="10dp" />

    <EditText
        android:id="@+id/et_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:drawableLeft="@mipmap/querenmima"
        android:drawableBottom="@drawable/shape_et_bottom_line"
        android:drawablePadding="10dp"
        android:hint="请确认密码"
        android:inputType="number"
        android:maxLength="11"
        android:padding="10dp" />

    <Button
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:text="注册"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</LinearLayout>