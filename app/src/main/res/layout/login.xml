<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        app:srcCompat="@mipmap/touxiang" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="39dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <android.support.v4.view.ViewPager
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0.5px"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="-28dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.01"
            app:srcCompat="@mipmap/left"
            tools:layout_marginTop="3dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@mipmap/main"
            android:text="手机号"
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0.2px"
            android:layout_height="40dp"
            android:layout_marginLeft="-30dp"
            android:layout_weight="0.01"
            app:srcCompat="@mipmap/right"
            tools:layout_marginTop="4dp" />

        <android.support.v4.view.ViewPager
            android:layout_width="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="400dp"
        android:layout_height="16dp">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="0dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <android.support.v4.view.ViewPager
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0.5px"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="-28dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.01"
            app:srcCompat="@mipmap/left"
            tools:layout_marginTop="3dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@mipmap/main"
            android:text="密码"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0.2px"
            android:layout_height="40dp"
            android:layout_marginLeft="-30dp"
            android:layout_weight="0.01"
            app:srcCompat="@mipmap/right"
            tools:layout_marginTop="4dp" />

        <android.support.v4.view.ViewPager
            android:layout_width="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="horizontal">

    </LinearLayout>


    <Button
        android:id="@+id/login_button_id"
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:text="登录"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/register_button_id"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_gravity="right"
        android:text="还没有账号？注册一个"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>